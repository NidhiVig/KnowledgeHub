<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="110"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:layout_margin="20dp"
        android:textSize="25sp"
        android:textColor="@color/lightgrey"
        android:textStyle="bold"
        android:text="Let's Learn about trending technologies." />

    <LinearLayout
        android:layout_width="fill_parent"
        android:weightSum="100"
        android:layout_weight="30"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/ios"
            android:padding="20dp"
            android:layout_weight="50"
            app:cardCornerRadius="40dp"
            android:layout_margin="20dp"
            android:backgroundTint="@color/grey"
            android:layout_height="match_parent" >

            <TextView
                android:layout_margin="30dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="IOS App Development" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:padding="20dp"
            android:layout_weight="50"
            app:cardCornerRadius="40dp"
            android:id="@+id/web"
            android:layout_margin="20dp"
            android:backgroundTint="@color/grey"
            android:layout_height="match_parent" >

            <TextView
                android:layout_margin="30dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="Web Development" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:weightSum="100"
        android:layout_height="wrap_content"
        android:layout_weight="30"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:padding="20dp"
            android:layout_weight="50"
            android:id="@+id/blockchain"
            app:cardCornerRadius="40dp"
            android:layout_margin="20dp"
            android:backgroundTint="@color/grey"
            android:layout_height="match_parent" >

            <TextView
                android:layout_margin="30dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="BLOCKCHAIN" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:padding="20dp"
            android:layout_weight="50"
            app:cardCornerRadius="40dp"
            android:layout_margin="20dp"
            android:id="@+id/ml"
            android:backgroundTint="@color/grey"
            android:layout_height="match_parent" >

            <TextView
                android:layout_margin="30dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="MACHINE LEARNING" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:layout_weight="30"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:padding="20dp"
            android:layout_weight="50"
            android:id="@+id/cloud"
            app:cardCornerRadius="40dp"
            android:layout_margin="20dp"
            android:backgroundTint="@color/grey"
            android:layout_height="match_parent" >

            <TextView
                android:layout_margin="30dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="CLOUD COMPUTING" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:padding="20dp"
            android:layout_weight="50"
            app:cardCornerRadius="40dp"
            android:layout_margin="20dp"
            android:id="@+id/android"
            android:backgroundTint="@color/grey"
            android:layout_height="match_parent" >

            <TextView
                android:layout_margin="30dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="Android App Development" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <Button
        android:id="@+id/button2"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:backgroundTint="@color/white"
        android:textSize="15sp"
        android:outlineAmbientShadowColor="@color/white"
        android:textStyle="bold"
        android:textColor="@color/grey"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:text="SUPPORT" />
</LinearLayout>